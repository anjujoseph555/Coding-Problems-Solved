
#include <bits/stdc++.h>
using namespace std;

int main()
{   int n;
    float arr[n],sum=0;
    cout<<"Enter the array size-->";
    cin>>n;
    cout<<"\nEnter the array elements-->";
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
  
    cout<<"\nArray elements after deletion:";
    for(int i=0;i<n;i++){
        sum+=arr[i];
    }
    float avg=sum/n;
    cout<<"\nSum:"<<sum<<"\nAverage:"<<avg;
	return 0;
}
